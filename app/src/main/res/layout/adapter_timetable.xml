<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tv_table_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxLength="10"
                android:singleLine="true"
                android:text="简要标题"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_huge" />

            <ImageView
                android:id="@+id/btn_img_star"
                android:layout_width="@dimen/drawer_img_edge"
                android:layout_height="@dimen/drawer_img_edge"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_star" />

            <TextView
                android:id="@+id/tv_table_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_table_title"
                android:maxLength="10"
                android:singleLine="true"
                android:text="2015-12-25"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_table_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_table_time"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="内容内容内容内容内容"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_middle" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>