<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defalut"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/button_height"
        android:background="@color/defalut">

        <EditText
            android:id="@+id/register_name_et"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:background="@color/defalut"
            android:hint="昵称"
            android:maxLength="11"
            android:numeric="integer" />

        <ImageView
            android:layout_width="@dimen/drawer_img_edge"
            android:layout_height="@dimen/drawer_img_edge"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_top"
            android:src="@mipmap/ic_user_grey"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/color_theme" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/button_height"
        android:background="@color/defalut">

        <EditText
            android:id="@+id/register_phone_et"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:background="@color/defalut"
            android:hint="手机号"
            android:maxLength="11"
            android:numeric="integer" />
        <ImageView
            android:layout_width="@dimen/drawer_img_edge"
            android:layout_height="@dimen/drawer_img_edge"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_top"
            android:src="@mipmap/ic_phone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/color_theme" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/button_height"
        android:background="@color/defalut"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_psw_et"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:background="@color/defalut"
            android:hint="密码"
            android:password="true" />
        <ImageView
            android:layout_width="@dimen/drawer_img_edge"
            android:layout_height="@dimen/drawer_img_edge"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_top"
            android:src="@mipmap/ic_password"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/color_theme" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/button_height"
        android:background="@drawable/btn_selector_round"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />
</LinearLayout>